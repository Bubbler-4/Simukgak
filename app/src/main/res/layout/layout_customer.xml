<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"
    android:padding="20dp"
    android:id="@+id/back_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8.76"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="주문용"
            android:textSize="20sp"
            android:textColor="#F5C30B"/>

        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/SettingsButton"
            android:onClick="onClickSettings"
            android:layout_weight="1.83"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyPage"
            android:layout_weight="1"
            android:onClick="onClickMyPage"
            android:textSize="13sp"
            android:textColor="#F5C30B"
            android:background="@drawable/color_block"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Board"
            android:onClick="onClickBoard"
            android:textSize="13sp"
            android:textColor="#F5C30B"
            android:background="@drawable/color_block"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:layout_weight="1"
            android:onClick="onClickOrder"
            android:textSize="13sp"
            android:textColor="#F5C30B"
            android:background="@drawable/color_block"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dutch"

            android:layout_weight="1"
            android:onClick="onClickDutch"
            android:textSize="13sp"
            android:textColor="#F5C30B"
            android:background="@drawable/color_block"/>

    </LinearLayout>

</LinearLayout>
