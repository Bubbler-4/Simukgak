<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.29" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Space android:layout_height="40dp"
            android:layout_width="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:layout_weight="8.25">

            <TextView
                android:text="Store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />

            <Spinner
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:text="Food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="374dp"
        android:layout_height="wrap_content">

        <Space
            android:layout_height="60dp"
            android:layout_width="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Store_name"
                android:ems="10"
                android:id="@+id/Store_name" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Food_name"
                android:ems="10"
                android:id="@+id/Food_name" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0.00" />

        <TextView
            android:text="GRADE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1" />

        <TextView
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Grade"
            android:layout_weight="1"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:progress="2"
        android:id="@+id/seekBar"
        android:layout_weight="0.61" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0.00" />

        <TextView
            android:text="Comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.69">

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0.00" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.60">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Type_Comment"
                android:ems="10"
                android:id="@+id/Type_Comment"
                android:layout_weight="1.60"
                android:layout_width="320dp" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.19">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.32" />

        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ok"
            android:layout_weight="1"
            android:textColor="#F5C30B" />

        <Button
            android:text="Cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancle"
            android:textColor="#F5C30B"
            android:layout_weight="0.73" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.84" />
    </LinearLayout>

</LinearLayout>
